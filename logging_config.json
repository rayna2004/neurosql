{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "detailed": {
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    },
    "audit": {
      "format": "%(asctime)s - AUDIT - %(message)s"
    }
  },
  "handlers": {
    "file": {
      "class": "logging.handlers.RotatingFileHandler",
      "filename": "data/logs/neurosql.log",
      "maxBytes": 10485760,
      "backupCount": 5,
      "formatter": "detailed",
      "level": "INFO"
    },
    "audit_file": {
      "class": "logging.handlers.RotatingFileHandler",
      "filename": "data/logs/audit.log",
      "maxBytes": 10485760,
      "backupCount": 10,
      "formatter": "audit",
      "level": "INFO"
    },
    "console": {
      "class": "logging.StreamHandler",
      "formatter": "detailed",
      "level": "WARNING"
    }
  },
  "loggers": {
    "neurosql": {
      "handlers": [
        "file",
        "console"
      ],
      "level": "INFO",
      "propagate": false
    },
    "neurosql.audit": {
      "handlers": [
        "audit_file"
      ],
      "level": "INFO",
      "propagate": false
    }
  }
}